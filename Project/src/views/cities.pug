extends layout.pug

block head
  link(rel="stylesheet", href="/cities.css")

block content
  h2(style="color: white;") City
  
  table
    thead     
      th(style="color: white;").text-center Country CodeðŸš©
      th(style="color: white;") City
      th(style="color: white;").number Population
    tbody
      each row in rows
        tr                  

extends layout.pug 

block head 
  link(rel="stylesheet", href="/form.css")

block content
  h2 Register
  .form-container
    form(action='/api/login', method='POST')
      label(for='email') Enter your email:
      input(
        name='email', 
        type='email', 
        required
      )
      label(for='password') Enter your password:
      input(
        name='password', 
        type='password', 
        required
      )
      input(type='submit', value='Submit')
